<nav class="navbar navbar-inverse navbar-fixed-top">  
        <div class="container-fluid">
                <div class="navbar-header" href="#">
                        {{#link-to 'index' class='navbar-brand'}}Program With Erik Blog Example{{/link-to}}
                </div>
                <ul class="nav navbar-nav">
                    {{#if session.isAuthenticated}}
                        <li>{{#link-to 'new'}}Add New Post{{/link-to}}</li>
                    {{/if}}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {{#unless session.isAuthenticated}}
                        <li><a href="#" {{action 'login' }}>Login</a></li>
                    {{else}}
                        <li><a href="#" {{action 'logout' }}>Logout</a></li>
                        <li>
                            {{!-- {{log session.currentUser.providerData}} --}}
                            {{#each session.currentUser.providerData as |user|}}
                                <a href='mailto:{{user.email}}'>
                                    <img src='{{user.photoURL}}' height='30px' width='30px'/>
                                    <br>
                                    <small>{{user.displayName}}</small>
                                </a>
                            {{/each}}
                        </li>
                    {{/unless}}
                </ul>
        </div>
</nav>  
{{outlet}}